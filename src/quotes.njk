---
layout: page
title: Quotes
name: Quotes
eleventyExcludeFromCollections: true
---

{% for q in quotes %}
  <h4 class="mt-9 mb-2">
    {{ q.author }}
  </h4>

  {% if q.quotes %}
    {% for qq in q.quotes %}
      <blockquote class="border-l dark:border-gray-700 border-neutral-300 rounded-none ml-6 pl-4 py-0 my-2 text-[1.02rem] leading-relaxed mt-5 first:mt-0">{{ qq }}</blockquote>
    {% endfor %}
  {% else %}
    <blockquote class="border-l dark:border-gray-700 border-neutral-300 rounded-none ml-6 pl-4 py-0 mt-4 text-[1.02rem] leading-relaxed">{{ q.quote }}</blockquote>
   {% endif %}
   
{% endfor %}