---
layout: base
templateEngineOverride: njk, md
permalink: "/blog/{{ page.fileSlug }}/index.html"
---

<article>
  <div class="mb-6">
    <h1 class="leading-snug mb-4">
      <center class="font-medium hidden sm:block text-specialred">/</center>
      {{ title }}
    </h1>

    <div class="text-neutral-600 dark:text-gray-400 flex flex-row justify-between">
      <div>
        <small>
          <time>{{ date | humanDate }}</time>
        </small>
        <small class="ml-3">
          Tagged: {{ tags | tagList | safe }}
        </small>
      </div>

      {% if translation %}
      <div class="self-end justify-self-end">
        {% if translation == 'en' %}
        <a 
          title="Traduzione italiano"
          class="text-sm" 
          href="/blog/{{ page.fileSlug }}/ita">Italiano</a>
        {% elif translation == 'ita' %}
        <a 
          title="English translation"
          class="text-sm" 
          href="/blog/{{ page.fileSlug }}">English</a>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>

  <div class="leading-relaxed post {% if tags.includes("articles") %}font-serif post-large-text{% endif %}">
    {{ content | safe }}
  </div>
</article>
