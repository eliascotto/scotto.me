{
  "name": "blog",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "Elia Scotto",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development npm-run-all -p dev:*",
    "dev": "npm start",
    "build": "NODE_ENV=production run-s build:*",
    "dev:11ty": "npx @11ty/eleventy --serve --quiet",
    "dev:css": "npx @tailwindcss/cli -i src/styles/styles.css -o _site/styles/styles.css --watch --postcss",
    "build:11ty": "npx @11ty/eleventy",
    "build:css": "npx @tailwindcss/cli -i src/styles/styles.css -o _site/styles/styles.css --minify --postcss",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
    "debugstart": "DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
    "benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
    "clean": "rm -rf _site",
    "serve": "npx @11ty/eleventy --serve",
    "preview": "npm run build && npx serve _site",
    "format": "npx prettier --write src/**/*.{js,css}",
    "new:post": "node scripts/new-content.js post",
    "new:article": "node scripts/new-content.js article",
    "new:page": "node scripts/new-content.js page"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-plugin-bundle": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/cli": "^4.1.6",
    "clean-css": "^5.3.3",
    "js-yaml": "^4.1.0",
    "luxon": "^3.2.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-image-figures": "^2.1.1",
    "markdown-it-link-attributes": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "serve": "^14.0.0",
    "tailwindcss": "^4.1.6",
    "html-minifier": "^4.0.0"
  }
}
